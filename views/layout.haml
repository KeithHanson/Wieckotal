%html
  %head
    %title
      Wieckotal - Pivotal Tracker Skin from Wieck Media
    %style{ :type => "text/css", :media => "screen" }
      body { font: 1em/1.5em "Lucida Grande"; padding: 20px; margin: 0 auto; max-width: 1000px; }
      \#stats_link {text-align:center;width: 100%;display:block;margin-top: 10px; margin-bottom: 10px;}
      \.graph { -webkit-border-radius: 5px; border: 1px solid black; width: 998px; height: 200px;margin-top: 10px; margin-bottom: 10px;}
      a { color: inherit; text-decoration: none; }
      
      \.today { float: left; width: 100%; }
      \.icebox { float: right; width: 300px; }
      
      ol { list-style: none; margin: 0; padding: 0; }
      ol li { border-bottom: 1px solid #ddd; padding: 6px 0 6px 30px; }
      
      \.today ol li .points { display: block; float: left; width: 20px; height: 1.6em; line-height: 1.6em; margin-top: 0.2em; margin-left: -30px; background-color: #999; text-align: center; color: #fff; -webkit-border-radius: 2px; font-weight: bold; font-size: 0.8em; }
      ol li .points.one { background-color: #f09; }
      ol li .points.two { background-color: #09f; }
      ol li .points.three { background-color: #f90; }
      
      \.icebox ol { font-size: 0.8em; line-height: 1.2em; }
      \.icebox ol li .points { float: left; margin-left: -44px; }
      \.icebox ol li { padding-left: 44px; }
      
      \.label { margin-left: 0.5em; font-size: 0.8em; line-height: 2em; text-transform: uppercase; float: right; padding-left: 2px;padding-right: 2px;-webkit-border-radius: 2px;}
      \.production_ready {background-color: #66FF66}
      \.project {background-color: #FFCC66}
      \.comments {display: none;width: 100%;}
      \.comments a {width: 100%; display: block; text-align: center; text-decoration: underline}


      ol.done { border-top: 5px solid #999; }
      ol.done li { color: #aaa; }
      ol.done li .points { background-color: #aaa; }
      
      ol li div.description { display: none; }

      h5 { margin-bottom: 0; }
      h5 + p { margin-top: 0; }
      
      input { font-size: 1em; margin-left: -30px; margin-bottom: 1em; }
      textarea { width: 100%; height: 8em; margin-top: 1em; font-size: 1em; padding: 1em; margin-left: -30px; }

      div.description { -webkit-border-radius: 2px; border: solid 1px black;margin-top: 5px; padding: 3px;}
      \.comment { -webkit-border-radius: 5px; border: solid 1px black; padding: 5px; margin-top: 5px;}

    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js", :type => "text/javascript"}
    %script{:src => "/flot/jquery.flot.js", :type => "text/javascript"}
  %body
    =yield
